	{{!< default}}


{{! Entry }}
	<main id="template-post" class="clearfix" role="main" itemscope itemtype="http://schema.org/Article">
		{{#post}}

			{{! Post }}
				<article class="{{#if @odd}} odd{{else}} even{{/if}}{{#if @first}} first{{/if}}{{#if @last}} last{{/if}}">
					<div class="container bm-larger tm-larger animate-in" data-anim-type="fade-in" data-anim-delay="200">
						<div class="one-whole bm-remove {{post_class}}">

							{{! Article Info }}
								<div class="clearfix">
									<div class="one-half-percent desktop-tablet omega">
										<h1 class="bm-remove">{{{title}}}</h1>
									</div>
									<div class="one-half-percent desktop-tablet alpha last">
										<h6 class="bm-remove post-date"><time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time></h6>
									</div>
								</div>

								<hr />
						

							{{! Article Body }}
								<div class="article-body" itemprop="articleBody">{{content}}</div>

								<hr />


							{{! Tags and Sharing }}
								<div class="clearfix">
									{{#if tags}}
										<div id="tags" class="one-half-percent desktop-tablet omega bm-remove last">
											<ul id="post-tags">
												{{#foreach tags}}<li><a href="{{url}}" target="_self">{{name}}</a></li>{{/foreach}}
											</ul>
										</div>
									{{/if}}

									<div id="sharing" class="{{#if tags}}one-half-percent desktop-tablet alpha bm-remove last{{/if}}">
										<span class="sharing-icon facebook tip-t-fade" data-tooltip="Share this on Facebook"><a href="http://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" target="_self"><i class="fa fa-facebook"></i></a></span>
										<span class="sharing-icon twitter tip-t-fade" data-tooltip="Share this on Twitter"><a href="https://twitter.com/intent/tweet?text={{@blog.title}}:%20{{title}}%20-%20{{url absolute="true"}}%20" target="_self"><i class="fa fa-twitter"></i></a></span>
										<span class="sharing-icon google-plus tip-t-fade" data-tooltip="Share this on Google+"><a href="https://plus.google.com/share?url={{url absolute="true"}}" target="_self"><i class="fa fa-google-plus"></i></a></span>
										<span class="sharing-icon pinterest tip-t-fade" data-tooltip="Share this on Pinterest"><a href="//pinterest.com/pin/create/button/?url={{url absolute="true"}}&amp;media={{@blog.url}}{{@blog.logo}}&amp;description={{excerpt characters="200"}}" target="_self"><i class="fa fa-pinterest"></i></a></span>
										<span class="sharing-icon mail tip-t-fade" data-tooltip="Email this to a friend"><a href="mailto:?subject={{title}}&amp;body=Hey,%20while%20browsing%20{{@blog.title}}%20I%20found%20a%20great%20article%20that%20I%20thought%20you%20might%20like%20to%20read.%0D%0A%0D%0A{{title}}%0D%0A{{url absolute="true"}}" target="_self"><i class="fa fa-envelope"></i></a></span>
									</div>
								</div>
						</div>

						<div class="under-content">
							<div></div>
						</div>
					</div>
				</article>

				<hr class="bm-remove separator" />


			{{! Author }}
				{{#if author}}
					{{#author}}
						<div class="container bm-larger tm-larger author animate-in" itemprop="author" itemscope itemtype="http://schema.org/Person" data-anim-type="fade-in" data-anim-delay="200">
							<div class="one-whole bm-remove author-bio">
								<h1>About The Author</h1>

								<hr />

								{{#if image}}<a href="{{url}}" target="_self" class="author-image"><img src="{{image}}" alt="{{name}} Image" /></a>{{/if}}

								<div class="author-details">
									<p class="bm-small" itemprop="name"><strong><a href="{{url}}" target="_self">{{name}}</a></strong></p>

									<p class="bm-small">
										{{#if location}}<i class="fa fa-map-marker fa-fw"></i> &nbsp;<a href="https://maps.google.com/maps?q={{location}}" target="_blank">{{location}}</a> &nbsp;&nbsp;{{/if}}<br class="split-br" />
										{{#if website}}<i class="fa fa-laptop fa-fw"></i> &nbsp;<a href="{{website}}" target="_blank">Website</a>{{/if}}
									</p>

									<p class="bm-remove">{{bio}}</p>
								</div>
							</div>

							<div class="under-content">
								<div></div>
							</div>
						</div>
					{{/author}}
				{{/if}}

				<hr class="bm-remove separator" />


			{{! Comments }}
				<div id="comment-plugin" class="container bm-larger tm-larger animate-in" data-anim-type="fade-in" data-anim-delay="200">
					<div class="one-whole bm-remove comments">
						<div class="fb-comments" data-href="{{url absolute="true"}}" data-numposts="5" data-colorscheme="light"></div>
						<div id="disqus_thread"></div>
					</div>

					<div class="under-content">
						<div></div>
					</div>
				</div>

				<hr class="bm-remove separator" />


			{{!! Pagination }}
				<div class="container bm-larger tm-larger pagination-container animate-in" data-anim-type="fade-in">
					<div class="one-whole bm-remove">
						<a href="javascript:history.go(-1)" target="_self" class="button text-uppercase">Return To Previous Page</a>
					</div>
				</div>

		{{/post}}
	</main>